      {
        id: 5,
        image: galleryImage5.src,
        title: 'Master Bathroom Retreat',
        description: 'Luxurious master bathroom featuring natural stone-look tiles and modern fixtures',
        location: 'Chennai, Tamil Nadu',
        year: '2023',
        tileType: 'Natural Stone-Look Porcelain'
