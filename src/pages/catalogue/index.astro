---
// filepath: c:\Users\HARSH\OneDrive\Desktop\gullible-group\src\pages\catalogue\index.astro
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getPageSEO } from '../../../graphql/pageSeo';
import { WP_USERNAME, WP_APP_PASSWORD, GRAPH_QL_LINK } from "astro:env/server";

// Import collection images (you'll need to add these to your assets folder)
import wallTilesImage from '../../assets/collections/wall-tiles.webp';
import priviaImage from '../../assets/collections/privia.webp';
import infiniaImage from '../../assets/collections/infinia-plus.webp';
import exteriaImage from '../../assets/collections/exteria.webp';
import gvtImage from '../../assets/collections/gvt-pgvt.webp';
import evoqImage from '../../assets/collections/evoq.webp';

// Fetch SEO data for the catalogue page
const catalogueSEO = await getPageSEO(GRAPH_QL_LINK, 'catalogue', WP_USERNAME, WP_APP_PASSWORD);

// Use WordPress SEO data or fallback to SEO-optimized defaults
const pageTitle = catalogueSEO?.title || 'Tile Collections Catalogue | Download Free PDF Brochures | The Tile Art';
const pageDescription = catalogueSEO?.metaDescription || 'Browse and download our comprehensive tile collection catalogues. Explore Wall Tiles, Privia, Infinia Plus, Exteria, GVT/PGVT, and EVOQ collections. Free PDF downloads available.';

// Catalogue collections data
const collections = [
  {
    id: 'wall-tiles',
    name: 'Wall Tiles Collection',
    description: 'Discover our premium wall tiles perfect for bathrooms, kitchens, and feature walls. From classic subway tiles to modern geometric patterns.',
    image: wallTilesImage,
    pdfUrl: '/catalogues/Tileart- Creanza Wall Tiles (300 x 600 mm).pdf',
    features: [
      'Wide range of colors and textures',
      'Easy to clean and maintain',
      'Water-resistant properties',
      'Various sizes available'
    ],
    highlightColor: 'bg-blue-500'
  },
  {
    id: 'privia',
    name: 'Privia Collection',
    description: 'Elegant and sophisticated tiles that bring luxury to any space. The Privia collection features premium finishes and exceptional craftsmanship.',
    image: priviaImage,
    pdfUrl: '/catalogues/Creanza (60 x 120 cm).pdf',
    features: [
      'Premium luxury finishes',
      'Exceptional durability',
      'Contemporary designs',
      'Perfect for high-end projects'
    ],
    highlightColor: 'bg-purple-500'
  },
  {
    id: 'infinia-plus',
    name: 'Infinia Plus Collection',
    description: 'Advanced ceramic technology meets stunning design. Infinia Plus offers superior performance with cutting-edge aesthetics.',
    image: infiniaImage,
    pdfUrl: '/catalogues/Tileart x Creanza- Infinia Plus (Slabs) (1).pdf',
    features: [
      'Advanced ceramic technology',
      'Superior scratch resistance',
      'Innovative surface treatments',
      'Long-lasting performance'
    ],
    highlightColor: 'bg-green-500'
  },
  {
    id: 'exteria',
    name: 'Exteria Collection',
    description: 'Outdoor and high-traffic area specialists. Exteria collection provides exceptional strength and weather resistance.',
    image: exteriaImage,
    pdfUrl: '/catalogues/Tileart x Creanza- Exteria Collection (1).pdf',
    features: [
      'Weather-resistant properties',
      'Anti-slip surface options',
      'High-traffic durability',
      'Outdoor application ready'
    ],
    highlightColor: 'bg-orange-500'
  },
  {
    id: 'gvt-pgvt',
    name: 'GVT/PGVT Collection',
    description: 'Glazed Vitrified Tiles and Polished Glazed Vitrified Tiles offering superior strength, low water absorption, and stunning finishes.',
    image: gvtImage,
    pdfUrl: '/catalogues/Tileart x Creanza GVT, PGVT Collection (1).pdf',
    features: [
      'Low water absorption',
      'High strength and durability',
      'Polished and matte finishes',
      'Large format options'
    ],
    highlightColor: 'bg-red-500'
  },
  {
    id: 'evoq',
    name: 'EVOQ Collection',
    description: 'The pinnacle of tile innovation. EVOQ collection represents the future of tile technology with revolutionary designs and performance.',
    image: evoqImage,
    pdfUrl: '/catalogues/Tileart x Creanza EVOQ Collection (2).pdf',
    features: [
      'Revolutionary tile technology',
      'Futuristic designs',
      'Premium material composition',
      'Industry-leading performance'
    ],
    highlightColor: 'bg-indigo-500'
  }
];


---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="bg-primary-50 py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-8" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
        <a href="/" class="inline-flex items-center text-primary-600 hover:text-primary-900 text-body transition-colors">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
          </svg>
          Home
        </a>
        </li>
        <li>
        <div class="flex items-center">
          <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-primary-900 text-body ml-1 md:ml-2">Catalogues</span>
        </div>
        </li>
      </ol>
    </nav>

      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-hero text-primary-900 mb-6">
          Tile Collection Catalogues
        </h1>
        <p class="text-lg-body text-primary-800 mb-8 leading-relaxed">
          Explore our comprehensive range of premium tile collections. Download detailed catalogues to discover the perfect tiles for your project.
        </p>
        
      </div>
    </div>
  </section>

  <!-- Collections Grid -->
  <section class="py-16 md:py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-xl-heading mb-4">
          Our Premium Collections
        </h2>
        <p class="text-lg-body text-primary-700 max-w-2xl mx-auto">
          Each collection represents years of innovation and craftsmanship. Click to download detailed catalogues with specifications, installation guides, and design inspiration.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {collections.map((collection, index) => (
          <article class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 group border border-primary-100">
            <!-- Collection Image -->
            <div class="relative h-64 overflow-hidden">
              <Image 
                src={collection.image} 
                alt={`${collection.name} - Premium tile collection showcase`}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                width={400}
                height={256}
              />
              
              <!-- Collection Badge -->
              <div class="absolute top-4 left-4">
                <span class={`${collection.highlightColor} text-white px-3 py-1 rounded-full text-xs-body font-medium`}>
                  Collection #{index + 1}
                </span>
              </div>
              
              <!-- Download Indicator -->
              <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-full p-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
            </div>

            <!-- Collection Content -->
            <div class="p-6">
              <h3 class="text-lg-heading text-primary-900 mb-3">
                {collection.name}
              </h3>
              
              <p class="text-body text-primary-700 mb-4 leading-relaxed">
                {collection.description}
              </p>

              <!-- Features List -->
              <div class="mb-6">
                <h4 class="text-feature text-primary-900 mb-3 font-semibold">Key Features:</h4>
                <ul class="space-y-2">
                  {collection.features.map(feature => (
                    <li class="flex items-start space-x-2">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-600 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-sm-body text-primary-700">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Download Button -->
              <a 
                href={collection.pdfUrl}
                download
                onclick={`trackDownload('${collection.name}')`}
                class="w-full inline-flex items-center justify-center bg-primary-600 hover:bg-primary-700 text-white py-3 px-6 rounded-xl transition-all duration-300 text-button-lg font-medium group-hover:shadow-lg transform group-hover:-translate-y-0.5"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Download Catalogue
              </a>
              
              <!-- File Info -->
              <div class="mt-3 text-center">
                <span class="text-caption text-primary-600">PDF Format • Free Download</span>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>


  <!-- Why Download Our Catalogues -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-xl-heading mb-4">
          Why Download Our Catalogues?
        </h2>
        <p class="text-lg-body text-primary-700 max-w-2xl mx-auto">
          Our detailed catalogues provide everything you need to make informed decisions for your tile projects.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {[
          {
            icon: 'document-text',
            title: 'Detailed Specifications',
            description: 'Complete technical details, dimensions, and material properties for each tile.'
          },
          {
            icon: 'color-swatch',
            title: 'Design Inspiration',
            description: 'Room layouts, color combinations, and styling suggestions from our design experts.'
          },
          {
            icon: 'cog',
            title: 'Technical Specifications',
            description: 'Comprehensive technical data including water absorption, slip resistance, and durability ratings.'
          },
          {
            icon: 'academic-cap',
            title: 'Application Guide',
            description: 'Expert recommendations for suitable applications and project types for each collection.'
          }
        ].map(benefit => (
          <div class="text-center p-6 rounded-xl bg-primary-50 hover:bg-primary-100 transition-colors duration-300 border border-primary-100">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-primary-600 rounded-full mb-4">
              {benefit.icon === 'document-text' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              )}
              {benefit.icon === 'color-swatch' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                </svg>
              )}
              {benefit.icon === 'cog' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
              {benefit.icon === 'calculator' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              )}
            </div>
            <h3 class="text-md-heading text-primary-900 mb-2">{benefit.title}</h3>
            <p class="text-sm-body text-primary-700">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 bg-primary-900 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-xl-heading text-white mb-6">
        Need Personal Assistance?
      </h2>
      <p class="text-lg-body text-primary-100 mb-8 max-w-2xl mx-auto">
        Our tile experts are here to help you choose the perfect collection for your project. Get personalized recommendations and professional guidance.
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-feature text-white mb-1">Call Us</h3>
          <p class="text-sm-body text-primary-100">+91 9667725508</p>
        </div>
        
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-feature text-white mb-1">Email Us</h3>
          <p class="text-sm-body text-primary-100">info@tileart.com</p>
        </div>
        
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-feature text-white mb-1">Visit Showroom</h3>
          <p class="text-sm-body text-primary-100">Jaipur, Rajasthan</p>
        </div>
      </div>
      
      <a 
        href="/contact-us"
        class="inline-flex items-center bg-white text-primary-900 hover:bg-primary-100 px-8 py-4 rounded-xl transition-all duration-300 text-button-lg font-medium"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        Get Expert Consultation
      </a>
    </div>
  </section>
</Layout>

<style>
  /* Enhanced hover effects */
  .group:hover .group-hover\:scale-105 {
    transform: scale(1.05);
  }
  
  .group:hover .group-hover\:opacity-100 {
    opacity: 1;
  }
  
  .group:hover .group-hover\:shadow-lg {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
  
  .group:hover .group-hover\:-translate-y-0\.5 {
    transform: translateY(-0.125rem);
  }
  
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
  
  /* Download button animation */
  .download-btn {
    transition: all 0.3s ease;
  }
  
  .download-btn:hover {
    transform: translateY(-2px);
  }
  
  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    .collection-grid {
      grid-template-columns: 1fr;
    }
  }
  
  /* Print styles for PDF downloads */
  @media print {
    .no-print {
      display: none;
    }
  }
</style>

