<script>
  document.addEventListener('DOMContentLoaded', function() {
    const logoSlider = document.querySelector('.logo-slider');
    const logoSlides = document.querySelectorAll('.logo-slide');
    
    if (!logoSlider || logoSlides.length === 0) return;
    
    // Clone slides multiple times for seamless loop
    const slideWidth = 200; // Approximate width including gap
    const clonesNeeded = Math.ceil((window.innerWidth / slideWidth) * 2) + logoSlides.length;
    
    for (let i = 0; i < clonesNeeded; i++) {
      const clone = logoSlides[i % logoSlides.length].cloneNode(true);
      clone.classList.add('cloned');
      logoSlider.appendChild(clone);
    }
    
    let currentTranslate = 0;
    let animationId;
    let isAnimating = false;
    
    function animateLogos() {
      if (!isAnimating) return;
      
      currentTranslate -= 1; // Slow, smooth movement
      
      // Reset position when we've moved past original slides
      if (Math.abs(currentTranslate) >= logoSlides.length * slideWidth) {
        currentTranslate = 0;
      }
      
      logoSlider.style.transform = `translateX(${currentTranslate}px)`;
      animationId = requestAnimationFrame(animateLogos);
    }
    
    function startLogoAnimation() {
      isAnimating = true;
      animateLogos();
    }
    
    function stopLogoAnimation() {
      isAnimating = false;
      if (animationId) {
        cancelAnimationFrame(animationId);
      }
    }
    
    // Start animation
    startLogoAnimation();
    
    // Handle window resize
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        stopLogoAnimation();
        setTimeout(startLogoAnimation, 100);
      }, 100);
    });
  });
</script>

