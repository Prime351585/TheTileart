<Layout title="TileArt - Beautiful Tile Designs for Your Home">

<!-- Hero Slider Section -->
<section id="hero-slider" class="relative overflow-hidden bg-cream-100">
	<div class="swiper-container h-[60vh] sm:h-[70vh] md:h-[80vh]">
		<div class="swiper-wrapper">
			<!-- First slide -->
			<div class="swiper-slide relative">
				<div class="absolute inset-0 bg-black/30 z-10"></div>
				<Image 
					src={bannerImage} 
					alt="Beautiful tile designs" 
					class="w-full h-full object-cover"
					width={1920} 
					height={1080} 
				/>
				<div class="absolute inset-0 flex items-center justify-center z-20">
					<div class="text-center px-4 sm:px-8 max-w-4xl mx-auto">
						<h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl text-white font-bold mb-2 sm:mb-4 hero-title">
							Transform Your Space with TileArt
						</h1>
						<p class="text-lg sm:text-xl md:text-2xl text-white mb-4 sm:mb-8 hero-subtitle">
							Premium ceramic and porcelain tiles for every room in your home
						</p>
						<div class="flex flex-col sm:flex-row justify-center gap-3 sm:gap-4 hero-buttons">
							<a href="#shop" class="bg-white text-gray-900 hover:bg-gray-100 px-6 sm:px-8 py-2 sm:py-3 rounded-full font-medium transition transform hover:scale-105">
								Shop Collection
							</a>
							<a href="#contact" class="bg-transparent border-2 border-white text-white hover:bg-white/20 px-6 sm:px-8 py-2 sm:py-3 rounded-full font-medium transition transform hover:scale-105">
								Get in Touch
							</a>
						</div>
					</div>
				</div>
			</div>
			
			<!-- Second slide -->
			<div class="swiper-slide relative">
				<div class="absolute inset-0 bg-black/40 z-10"></div>
				<Image 
					src={bannerImage} 
					alt="Designer tiles collection" 
					class="w-full h-full object-cover"
					width={1920} 
					height={1080} 
				/>
				<div class="absolute inset-0 flex items-center justify-center z-20">
					<div class="text-center px-4 sm:px-8 max-w-4xl mx-auto">
						<h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl text-white font-bold mb-2 sm:mb-4 hero-title">
							Elevate Your Design Vision
						</h1>
						<p class="text-lg sm:text-xl md:text-2xl text-white mb-4 sm:mb-8 hero-subtitle">
							Exclusive patterns and textures crafted by design experts
						</p>
						<div class="flex flex-col sm:flex-row justify-center gap-3 sm:gap-4 hero-buttons">
							<a href="#gallery" class="bg-white text-gray-900 hover:bg-gray-100 px-6 sm:px-8 py-2 sm:py-3 rounded-full font-medium transition transform hover:scale-105">
								View Gallery
							</a>
							<a href="#testimonials" class="bg-transparent border-2 border-white text-white hover:bg-white/20 px-6 sm:px-8 py-2 sm:py-3 rounded-full font-medium transition transform hover:scale-105">
								See Reviews
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<!-- Add pagination and navigation -->
		<div class="swiper-pagination !bottom-6"></div>
		<div class="swiper-button-prev !text-white !left-4 !hidden sm:!flex"></div>
		<div class="swiper-button-next !text-white !right-4 !hidden sm:!flex"></div>
	</div>
</section>

<script>
	// Import Swiper and initialize
	import Swiper from 'swiper';
	import { Navigation, Pagination, Autoplay } from 'swiper/modules';
	import 'swiper/css';
	import 'swiper/css/navigation';
	import 'swiper/css/pagination';
	
	document.addEventListener('DOMContentLoaded', function() {
		const swiper = new Swiper('.swiper-container', {
			modules: [Navigation, Pagination, Autoplay],
			slidesPerView: 1,
			spaceBetween: 0,
			loop: true,
			autoplay: {
				delay: 5000,
				disableOnInteraction: false,
			},
			pagination: {
				el: '.swiper-pagination',
				clickable: true
			},
			navigation: {
				nextEl: '.swiper-button-next',
				prevEl: '.swiper-button-prev',
			},
			effect: 'fade',
			fadeEffect: {
				crossFade: true
			}
		});
	});
</script>

