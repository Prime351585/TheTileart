<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slider = document.querySelector('.seamless-slider');
    const slides = document.querySelectorAll('.slide');
    
    if (!slider || slides.length === 0) return;
    
    // Clone slides for seamless loop
    const slideWidth = 320 + 24; // slide width + gap
    let currentTranslate = 0;
    let animationId;
    let isAnimating = false;
    
    // Clone first few slides and append to end
    const clonesToAdd = Math.ceil(window.innerWidth / slideWidth) + 2;
    for (let i = 0; i < clonesToAdd; i++) {
      const clone = slides[i % slides.length].cloneNode(true);
      clone.classList.add('cloned');
      slider.appendChild(clone);
    }
    
    function animate() {
      if (!isAnimating) return;
      
      currentTranslate -= 0.5; // Adjust speed here
      
      // Reset position when we've moved past original slides
      if (Math.abs(currentTranslate) >= slides.length * slideWidth) {
        currentTranslate = 0;
      }
      
      slider.style.transform = `translateX(${currentTranslate}px)`;
      animationId = requestAnimationFrame(animate);
    }
    
    function startAnimation() {
      isAnimating = true;
      animate();
    }
    
    function stopAnimation() {
      isAnimating = false;
      if (animationId) {
        cancelAnimationFrame(animationId);
      }
    }
    
    // Start animation
    startAnimation();
    
    // Handle window resize
    window.addEventListener('resize', () => {
      stopAnimation();
      setTimeout(startAnimation, 100);
    });
  });
</script>

