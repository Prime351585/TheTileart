---
// filepath: c:\Users\HARSH\OneDrive\Desktop\gullible-group\src\pages\privacy\index.astro
import Layout from '../../layouts/Layout.astro';
import { getPageSEO } from '../../../graphql/pageSeo';
import { WP_USERNAME, WP_APP_PASSWORD, GRAPH_QL_LINK } from "astro:env/server";

// Fetch SEO data for the privacy page
const privacySEO = await getPageSEO(GRAPH_QL_LINK, 'privacy-policy', WP_USERNAME, WP_APP_PASSWORD);

// Use WordPress SEO data or fallback to SEO-optimized defaults
const pageTitle = privacySEO?.title || 'Privacy Policy | The Tileart - Your Data Protection Rights';
const pageDescription = privacySEO?.metaDescription || 'Learn how The Tileart collects, uses, and protects your personal information. Read our comprehensive privacy policy covering data rights, security measures, and contact information.';

// Privacy policy sections for easy navigation
const sections = [
  { id: 'information-we-collect', title: 'Information We Collect' },
  { id: 'how-we-use', title: 'How We Use Your Information' },
  { id: 'how-we-share', title: 'How We Share Your Information' },
  { id: 'cookies', title: 'Cookies and Similar Technologies' },
  { id: 'your-rights', title: 'Your Rights' },
  { id: 'data-security', title: 'Data Security' },
  { id: 'data-retention', title: 'Data Retention' },
  { id: 'third-party', title: 'Third-Party Services' },
  { id: 'updates', title: 'Updates to This Policy' },
  { id: 'contact', title: 'Contact Us' }
];

// Get current date for effective date
const currentDate = new Date().toLocaleDateString('en-US', { 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
});
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="bg-primary-50 py-16 md:py-20">
    <div class=" px-4 sm:px-6 lg:px-8 ">
      <!-- Breadcrumb -->
      <nav class="flex mb-8" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
        <a href="/" class="text-primary-600 hover:text-primary-900 text-body transition-colors flex items-center">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
          </svg>
          Home
        </a>
          </li>
          <li>
        <div class="flex items-center">
          <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-primary-900 text-body ml-1 md:ml-2">Blog</span>
        </div>
          </li>
        </ol>
      </nav>

      <div class="text-center">
        <h1 class="text-hero text-primary-900 mb-6">
          Privacy Policy
        </h1>
        <p class="text-lg-body text-primary-700 mb-4">
          At The Tileart, we value your privacy and are committed to protecting your personal information.
        </p>
        <div class="inline-flex items-center bg-white px-6 py-3 rounded-full shadow-sm border border-primary-100">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-primary-800 text-feature">Effective Date: {currentDate}</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Table of Contents -->
  <section class="py-12 bg-white border-b border-primary-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-xl-heading text-center mb-6">Quick Navigation</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {sections.map((section, index) => (
          <a 
            href={`#${section.id}`} 
            class="flex items-center p-4 bg-primary-50 hover:bg-primary-100 rounded-lg transition-colors group border border-primary-100"
          >
            <div class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center text-button font-bold mr-6">
              {index + 1}
            </div>
            <span class="text-primary-800 group-hover:text-primary-900 text-feature">{section.title}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Privacy Policy Content -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Introduction -->
      <div class="prose prose-lg max-w-none mb-12">
        <p class="text-lg-body text-primary-700 leading-relaxed">
          This Privacy Policy explains how we collect, use, and safeguard your data when you visit our website, interact with us, or use our services. Please read it carefully, and contact us if you have any questions.
        </p>
      </div>

      <!-- Section 1: Information We Collect -->
      <div id="information-we-collect" class="mb-12 scroll-mt-24">
        <h2 class="text-xl-heading flex items-center mb-6">
          <span class="bg-primary-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-button-lg font-bold mr-6">1</span>
          Information We Collect
        </h2>
        <div class="bg-primary-50 p-6 rounded-lg mb-6 border border-primary-100">
          <p class="text-primary-800 text-feature mb-4">We may collect the following types of information:</p>
        </div>
        
        <div class="space-y-6">
          <div class="border-l-4 border-primary-600 pl-6">
            <h3 class="text-lg-heading text-primary-900 mb-3">Personal Information</h3>
            <p class="text-body text-primary-700">
              Name, email address, phone number, address, payment details, and other information you provide when placing an order, creating an account, or contacting us.
            </p>
          </div>
          
          <div class="border-l-4 border-primary-600 pl-6">
            <h3 class="text-lg-heading text-primary-900 mb-3">Device and Usage Data</h3>
            <p class="text-body text-primary-700">
              IP address, browser type, operating system, and information about how you interact with our website (e.g., pages viewed, time spent on site).
            </p>
          </div>
          
          <div class="border-l-4 border-primary-600 pl-6">
            <h3 class="text-lg-heading text-primary-900 mb-3">Cookies and Tracking Technologies</h3>
            <p class="text-body text-primary-700">
              Information collected using cookies, web beacons, and similar technologies to enhance your experience.
            </p>
          </div>
        </div>
      </div>

      <!-- Section 2: How We Use Your Information -->
      <div id="how-we-use" class="mb-12 scroll-mt-24">
        <h2 class="text-xl-heading flex items-center mb-6">
          <span class="bg-primary-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-button-lg font-bold mr-6">2</span>
          How We Use Your Information
        </h2>
        <div class="bg-primary-50 p-6 rounded-lg mb-6 border border-primary-100">
          <p class="text-primary-800 text-feature">We use the information we collect for purposes including:</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {[
            'Providing and delivering our products and services',
            'Processing payments securely',
            'Responding to your inquiries or requests',
            'Sending promotional offers, updates, and important notifications (you can opt out of marketing communications anytime)',
            'Improving and personalizing our website and offerings',
            'Complying with legal obligations and resolving disputes'
          ].map(use => (
            <div class="flex items-start space-x-3 p-4 bg-white border border-primary-100 rounded-lg shadow-sm">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-body text-primary-700">{use}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Section 3: How We Share Your Information -->
      <div id="how-we-share" class="mb-12 scroll-mt-24">
        <h2 class="text-xl-heading flex items-center mb-6">
          <span class="bg-primary-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-button-lg font-bold mr-6">3</span>
          How We Share Your Information
        </h2>
        <div class="bg-green-50 border border-green-200 p-6 rounded-lg mb-6">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <p class="text-green-800 text-feature">We respect your privacy and do not sell your personal information.</p>
          </div>
        </div>
        
        <p class="text-body text-primary-700 mb-6">However, we may share data with:</p>
        
        <div class="space-y-4">
          {[
            { title: 'Service Providers', desc: 'Trusted third parties who assist with payment processing, order fulfillment, analytics, advertising, and customer support.' },
            { title: 'Business Transfers', desc: 'If we merge, acquire, or sell our company, your data may be transferred as part of the transaction.' },
            { title: 'Legal Authorities', desc: 'When required to comply with legal obligations or protect our rights.' }
          ].map(item => (
            <div class="bg-white border border-primary-100 p-6 rounded-lg shadow-sm">
              <h3 class="text-md-heading text-primary-900 mb-2">{item.title}</h3>
              <p class="text-body text-primary-700">{item.desc}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Section 4: Cookies and Similar Technologies -->
      <div id="cookies" class="mb-12 scroll-mt-24">
        <h2 class="text-xl-heading flex items-center mb-6">
          <span class="bg-primary-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-button-lg font-bold mr-6">4</span>
          Cookies and Similar Technologies
        </h2>
        <div class="bg-primary-50 p-6 rounded-lg mb-6 border border-primary-100">
          <p class="text-primary-800 text-body">We use cookies and similar technologies to enhance your browsing experience. They help us:</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          {[
            { icon: 'chart-bar', text: 'Understand how users interact with our site' },
            { icon: 'speakerphone', text: 'Provide relevant advertisements and personalized content' },
            { icon: 'cog', text: 'Remember your preferences and improve site functionality' }
          ].map(item => (
            <div class="text-center p-6 bg-white border border-primary-100 rounded-lg shadow-sm">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                {item.icon === 'chart-bar' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                )}
                {item.icon === 'speakerphone' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                  </svg>
                )}
                {item.icon === 'cog' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                )}
              </div>
              <p class="text-body text-primary-700">{item.text}</p>
            </div>
          ))}
        </div>
        
        <div class="bg-yellow-50 border border-yellow-200 p-6 rounded-lg">
          <p class="text-yellow-800 text-body">
            <span class="text-feature font-semibold">Cookie Management:</span> You can manage cookie preferences through your browser settings. Disabling cookies may impact your website experience.
          </p>
        </div>
      </div>

      <!-- Section 5: Your Rights -->
      <div id="your-rights" class="mb-12 scroll-mt-24">
        <h2 class="text-xl-heading flex items-center mb-6">
          <span class="bg-primary-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-button-lg font-bold mr-6">5</span>
          Your Rights
        </h2>
        <div class="bg-blue-50 border border-blue-200 p-6 rounded-lg mb-6">
          <p class="text-blue-800 text-body">
            Depending on your location and applicable laws, you may have the following rights regarding your data:
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          {[
            { title: 'Access', desc: 'Request a copy of the personal data we hold about you', icon: 'eye' },
            { title: 'Correction', desc: 'Request corrections to inaccurate or incomplete information', icon: 'pencil' },
            { title: 'Deletion', desc: 'Request deletion of your personal data (subject to certain exceptions)', icon: 'trash' },
            { title: 'Opt-Out', desc: 'Opt out of marketing communications or data use for targeted advertising', icon: 'x-circle' },
            { title: 'Data Portability', desc: 'Request data transfer to another service provider', icon: 'download' },
            { title: 'Verification', desc: 'We may require verification of your identity before processing requests', icon: 'shield-check' }
          ].map(right => (
            <div class="bg-white border border-primary-100 p-6 rounded-lg shadow-sm">
              <div class="flex items-start space-x-3">
                <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                  {right.icon === 'eye' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  )}
                  {right.icon === 'pencil' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                    </svg>
                  )}
                  {right.icon === 'trash' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  )}
                  {right.icon === 'x-circle' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                  {right.icon === 'download' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  )}
                  {right.icon === 'shield-check' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  )}
                </div>
                <div>
                  <h3 class="text-md-heading text-primary-900 mb-2">{right.title}</h3>
                  <p class="text-sm-body text-primary-700">{right.desc}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <div class="bg-primary-50 border border-primary-100 p-6 rounded-lg">
          <p class="text-primary-800 text-body">
            <span class="text-feature font-semibold">To exercise your rights:</span> Please contact us at <a href="mailto:privacy@tileart.com" class="text-primary-600 hover:text-primary-800 underline">privacy@tileart.com</a>. We may require verification of your identity before processing your request.
          </p>
        </div>
      </div>

      <!-- Sections 6-10 -->
      <div id="data-security" class="mb-12 scroll-mt-24">
        <h2 class="text-xl-heading flex items-center mb-6">
          <span class="bg-primary-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-button-lg font-bold mr-6">6</span>
          Data Security
        </h2>
        <div class="bg-green-50 border border-green-200 p-6 rounded-lg">
          <div class="flex items-start space-x-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            <div>
              <p class="text-green-800 text-body mb-3">
                We take reasonable technical and organizational measures to protect your data against unauthorized access, alteration, disclosure, or destruction.
              </p>
              <p class="text-green-700 text-sm-body">
                However, no security method is 100% foolproof, and we cannot guarantee absolute data security.
              </p>
            </div>
          </div>
        </div>
      </div>

      <div id="data-retention" class="mb-12 scroll-mt-24">
        <h2 class="text-xl-heading flex items-center mb-6">
          <span class="bg-primary-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-button-lg font-bold mr-6">7</span>
          Data Retention
        </h2>
        <div class="bg-blue-50 border border-blue-200 p-6 rounded-lg">
          <p class="text-blue-800 text-body">
            We retain your personal data only for as long as necessary to fulfill the purposes outlined in this Privacy Policy, comply with legal requirements, or resolve disputes.
          </p>
        </div>
      </div>

      <div id="third-party" class="mb-12 scroll-mt-24">
        <h2 class="text-xl-heading flex items-center mb-6">
          <span class="bg-primary-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-button-lg font-bold mr-6">8</span>
          Third-Party Services
        </h2>
        <div class="bg-yellow-50 border border-yellow-200 p-6 rounded-lg">
          <div class="flex items-start space-x-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-600 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <div>
              <p class="text-yellow-800 text-body mb-3">
                Our website may contain links to third-party websites or services. We are not responsible for the privacy practices or content of these third parties.
              </p>
              <p class="text-yellow-700 text-sm-body">
                We recommend reviewing their privacy policies before providing any personal information.
              </p>
            </div>
          </div>
        </div>
      </div>

      <div id="updates" class="mb-12 scroll-mt-24">
        <h2 class="text-xl-heading flex items-center mb-6">
          <span class="bg-primary-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-button-lg font-bold mr-6">9</span>
          Updates to This Policy
        </h2>
        <div class="bg-primary-50 border border-primary-100 p-6 rounded-lg">
          <p class="text-primary-800 text-body">
            We may update this Privacy Policy from time to time to reflect changes in our practices or legal requirements. The updated policy will be posted on this page with the "Effective Date" updated accordingly.
          </p>
        </div>
      </div>

      <!-- Contact Section -->
