  .prose img {
    margin-left: auto;
    margin-right: auto;
    border-radius: 0.5rem;
  }
  
  .prose a {
    color: var(--color-primary-600);
    text-decoration: none;
  }
  
  .prose a:hover {
    text-decoration: underline;
  }
</style>