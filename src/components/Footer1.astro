// Company information
const companyInfo = {
  name: "The Tile-Art",
  tagline: "Crafting Exceptional Spaces with Quality Tiles",
  address: {
    street: "123 Tile Street",
    city: "Mumbai",
    state: "Maharashtra",
    zipCode: "400001",
