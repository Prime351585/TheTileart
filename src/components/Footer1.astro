---

<footer class="bg-primary-900 text-white">
  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <!-- Column 1: Interactive Map -->
      <div class="lg:col-span-1">
        <h3 class="text-xl font-bold mb-6 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Find Us
        </h3>
        
        <!-- Map Container -->
        <div class="relative bg-primary-800 rounded-lg overflow-hidden shadow-lg mb-6">
          <div class="aspect-w-16 aspect-h-12">
            <!-- Embedded Google Map -->
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d241317.14571392423!2d72.71637853671874!3d19.08219783940319!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be7c6306644edc1%3A0x5da4ed8f8d648c69!2sMumbai%2C%20Maharashtra!5e0!3m2!1sen!2sin!4v1647856894693!5m2!1sen!2sin"
              width="100%" 
              height="300" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade"
              title="The Tile-Art Location"
              class="w-full h-full"
            ></iframe>
          </div>
          
          <!-- Map Overlay for Branding -->
          <div class="absolute bottom-4 left-4 bg-white bg-opacity-95 px-3 py-2 rounded-md shadow-sm">
            <div class="text-primary-900 text-sm font-bold">The Tile-Art</div>
            <div class="text-primary-600 text-xs">Visit Our Showroom</div>
          </div>
        </div>
        
        <!-- Quick Map Info -->
        <div class="bg-primary-800 p-4 rounded-lg">
          <div class="flex items-center space-x-3 mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-primary-200 text-sm">Free Parking Available</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
            </svg>
            <span class="text-primary-200 text-sm">Easy Metro Access</span>
          </div>
        </div>
      </div>

      <!-- Column 2: Company Info & Contact -->
      <div class="lg:col-span-1">
        <div class="space-y-8">
          <!-- Company Info -->
          <div>
            <h3 class="text-xl font-bold mb-6 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h4M9 7h6m-6 4h6m-6 4h6m-6 4h6" />
              </svg>
              Visit Our Showroom
            </h3>
            
            <!-- Address -->
            <div class="bg-primary-800 p-6 rounded-lg mb-6">
              <div class="space-y-3">
                <div class="flex items-start space-x-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-300 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <div class="text-primary-100">
                    <div class="font-medium">{companyInfo.address.street}</div>
                    <div>{companyInfo.address.city}, {companyInfo.address.state} {companyInfo.address.zipCode}</div>
                    <div>{companyInfo.address.country}</div>
                  </div>
                </div>
                
                <div class="flex items-center space-x-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <a href={`tel:${companyInfo.contact.phone}`} class="text-primary-100 hover:text-white transition-colors">
                    {companyInfo.contact.phone}
                  </a>
                </div>
                
                <div class="flex items-center space-x-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <a href={`mailto:${companyInfo.contact.email}`} class="text-primary-100 hover:text-white transition-colors">
                    {companyInfo.contact.email}
                  </a>
                </div>
                
                <!-- WhatsApp -->
                <div class="flex items-center space-x-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.106"/>
                  </svg>
                  <a href={`https://wa.me/${companyInfo.contact.whatsapp.replace(/[^0-9]/g, '')}`} target="_blank" rel="noopener noreferrer" class="text-green-400 hover:text-green-300 transition-colors">
                    WhatsApp Us
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Business Hours -->
          <div>
            <h4 class="text-lg font-semibold mb-4 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Business Hours
            </h4>
            <div class="space-y-2 text-primary-200">
              <div class="flex justify-between">
                <span>Monday - Friday:</span>
                <span class="font-medium">9:00 AM - 7:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday:</span>
                <span class="font-medium">9:00 AM - 6:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday:</span>
                <span class="font-medium">10:00 AM - 4:00 PM</span>
              </div>
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="space-y-3">
            <a href="/contact-us" class="block w-full bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-4 rounded-lg transition-colors text-center">
              Get Directions
            </a>
            <a href="tel:+919876543210" class="block w-full bg-transparent border-2 border-primary-600 hover:bg-primary-600 text-white font-medium py-3 px-4 rounded-lg transition-colors text-center">
              Call Now
            </a>
          </div>
        </div>
      </div>

      <!-- Column 3: Navigation Links -->
      <div class="lg:col-span-1">
        <h3 class="text-xl font-bold mb-6 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
          </svg>
          Quick Links
        </h3>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-8">
          <!-- Company Links -->
          <div>
            <h4 class="text-lg font-semibold text-primary-300 mb-4">Company</h4>
            <ul class="space-y-2">
              {navigationLinks.company.map(link => (
                <li>
                  <a href={link.href} class="text-primary-200 hover:text-white transition-colors flex items-center group">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-primary-400 group-hover:text-primary-300 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Products Links -->
          <div>
            <h4 class="text-lg font-semibold text-primary-300 mb-4">Products</h4>
            <ul class="space-y-2">
              {navigationLinks.products.map(link => (
                <li>
                  <a href={link.href} class="text-primary-200 hover:text-white transition-colors flex items-center group">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-primary-400 group-hover:text-primary-300 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Support Links -->
          <div>
            <h4 class="text-lg font-semibold text-primary-300 mb-4">Support</h4>
            <ul class="space-y-2">
              {navigationLinks.support.map(link => (
                <li>
                  <a href={link.href} class="text-primary-200 hover:text-white transition-colors flex items-center group">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-primary-400 group-hover:text-primary-300 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Legal Links -->
          <div>
            <h4 class="text-lg font-semibold text-primary-300 mb-4">Legal</h4>
            <ul class="space-y-2">
              {navigationLinks.legal.map(link => (
                <li>
                  <a href={link.href} class="text-primary-200 hover:text-white transition-colors flex items-center group">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-primary-400 group-hover:text-primary-300 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Newsletter Section -->
  <div class="border-t border-primary-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center mb-8">
        <h3 class="text-2xl font-bold mb-4">Stay Updated with The Tile-Art</h3>
        <p class="text-primary-200 max-w-2xl mx-auto">
          Get the latest updates on new tile collections, design trends, and exclusive offers delivered to your inbox.
        </p>
      </div>
      
      <form class="max-w-md mx-auto">
        <div class="flex">
          <input 
            type="email" 
            placeholder="Enter your email address" 
            class="flex-1 px-4 py-3 rounded-l-lg bg-primary-800 border border-primary-700 text-white placeholder-primary-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            required
          />
          <button 
            type="submit"
            class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-r-lg font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-primary-900"
          >
            Subscribe
          </button>
        </div>
        <p class="text-primary-300 text-xs mt-2 text-center">
          We respect your privacy. Unsubscribe at any time.
        </p>
      </form>
    </div>
  </div>

  <!-- Social Media & Bottom Bar -->
  <div class="border-t border-primary-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-6 md:space-y-0">
        
        <!-- Brand & Copyright -->
        <div class="text-center md:text-left">
          <div class="text-xl font-bold mb-2">{companyInfo.name}</div>
          <div class="text-primary-300 text-sm">{companyInfo.tagline}</div>
          <div class="text-primary-400 text-xs mt-2">
            © {currentYear} {companyInfo.name}. All rights reserved.
          </div>
        </div>

        <!-- Social Media Links -->
        <div class="flex space-x-6">
          {socialLinks.map(social => (
            <a 
              href={social.href} 
              class="text-primary-300 hover:text-white transition-colors"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`Follow us on ${social.name}`}
            >
              {social.icon === 'facebook' && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {social.icon === 'instagram' && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.611-3.197-1.559-.486-.617-.774-1.392-.774-2.235 0-1.993 1.616-3.608 3.608-3.608.929 0 1.774.354 2.411.933l-.81.81c-.384-.345-.888-.551-1.437-.551-1.197 0-2.168.971-2.168 2.168 0 1.197.971 2.168 2.168 2.168 1.064 0 1.955-.69 2.095-1.614H8.449v-1.08h3.295c.041.22.063.446.063.682 0 2.393-1.602 4.093-3.908 4.093-.22 0-.434-.016-.641-.046z"/>
