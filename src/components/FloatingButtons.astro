<style>
  /* Container positioning */
  .floating-buttons-container {
    position: fixed;
    right: 1.5rem;
    bottom: 1.5rem;
    display: flex;
    flex-direction: column-reverse;
    align-items: center;
    gap: 0.75rem;
    z-index: 50;
  }

  /* Main toggle button */
  .floating-main-button {
    width: 3.5rem;
    height: 3.5rem;
    cursor: pointer;
    transition: transform 0.3s ease, background-color 0.3s ease;
  }

  /* Action buttons */
  .floating-button {
    width: 3rem;
    height: 3rem;
    position: relative;
  }

  /* Tooltip styling */
  .floating-button::before {
    content: attr(data-tooltip);
    position: absolute;
    right: calc(100% + 0.5rem);
    background-color: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    white-space: nowrap;
    pointer-events: none;
    opacity: 0;
    transform: translateX(10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  /* Show tooltip on hover */
  .floating-button:hover::before {
    opacity: 1;
    transform: translateX(0);
  }

  /* Pulse animation for the main button */
  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(var(--primary-600-rgb), 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(var(--primary-600-rgb), 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(var(--primary-600-rgb), 0);
    }
  }

  .pulse {
    animation: pulse 2s infinite;
  }

  /* Floating button hover effect */
  .floating-main-button:hover {
    transform: scale(1.1);
  }
</style>

<script>
  // Wait for the DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', () => {
    setupFloatingButtons();
  });

  function setupFloatingButtons() {
    const toggleButton = document.getElementById('floating-toggle');
    const actionButtons = document.querySelectorAll('.floating-button');
    const iconOpen = document.querySelector('.icon-open');
    const iconClose = document.querySelector('.icon-close');
    
    // Add pulse animation to main button
    toggleButton?.classList.add('pulse');
    
    // Initial state is collapsed
    let isExpanded = false;
    
    toggleButton?.addEventListener('click', () => {
      isExpanded = !isExpanded;
      toggleButton.setAttribute('aria-expanded', isExpanded.toString());
      
      // Toggle icon
      iconOpen?.classList.toggle('hidden');
      iconClose?.classList.toggle('hidden');
      
      // Stop pulsing when expanded
      if (isExpanded) {
        toggleButton.classList.remove('pulse');
      } else {
        setTimeout(() => {
          toggleButton.classList.add('pulse');
        }, 1000);
      }
      
      // Animate the action buttons
      actionButtons.forEach((button, index) => {
        setTimeout(() => {
          if (isExpanded) {
            button.classList.add('scale-100', 'opacity-100');
            button.classList.remove('scale-0', 'opacity-0');
          } else {
            button.classList.remove('scale-100', 'opacity-100');
            button.classList.add('scale-0', 'opacity-0');
          }
        }, index * 100); // Staggered animation
      });
    });
  }
</script>